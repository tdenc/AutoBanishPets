<Bindings>
	<Layer name="SI_KEYBINDINGS_LAYER_GENERAL">
		<Category name="Auto Banish Pets">
			<Action name="BANISH_ALL">
				<Up>AutoBanishPets.BanishAll()</Up>
			</Action>
			<Action name="BANISH_PETS">
				<Up>AutoBanishPets.BanishPets()</Up>
			</Action>
			<Action name="BANISH_VANITY_PETS">
				<Up>AutoBanishPets.BanishVanityPets()</Up>
			</Action>
			<Action name="BANISH_ASSISTANTS">
				<Up>AutoBanishPets.BanishAssistants()</Up>
			</Action>
			<Action name="BANISH_COMPANIONS">
				<Up>AutoBanishPets.BanishCompanions()</Up>
			</Action>
			<Action name="NO_PETS_ALLOWED">
				<Up>AutoBanishPets.ToggleNPA(not AutoBanishPets.savedVariables.noPetsAllowed)</Up>
			</Action>
		</Category>
	</Layer>
	<Layer name="GamepadUIMode" allowFallthrough="false">
        <Category>
            <AllowAction name="BANISH_ALL"/>
            <AllowAction name="BANISH_PETS"/>
            <AllowAction name="BANISH_VANITY_PETS"/>
            <AllowAction name="BANISH_ASSISTANTS"/>
            <AllowAction name="BANISH_COMPANIONS"/>
            <AllowAction name="NO_PETS_ALLOWED"/>
        </Category>
    </Layer>
</Bindings>