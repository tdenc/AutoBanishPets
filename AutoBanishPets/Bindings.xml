<Bindings>
	<Layer name="SI_KEYBINDINGS_LAYER_GENERAL">
		<Category name="Auto Banish Pets">
			<Action name="BANISH_ALL">
				<Down>AutoBanishPets.BanishAll()</Down>
			</Action>
			<Action name="BANISH_PETS">
				<Down>AutoBanishPets.BanishPets()</Down>
			</Action>
			<Action name="BANISH_VANITY_PETS">
				<Down>AutoBanishPets.BanishVanityPets()</Down>
			</Action>
			<Action name="BANISH_ASSISTANTS">
				<Down>AutoBanishPets.BanishAssistants()</Down>
			</Action>
			<Action name="BANISH_COMPANIONS">
				<Down>AutoBanishPets.BanishCompanions()</Down>
			</Action>
			<Action name="RESUMMON_ALL">
				<Down>AutoBanishPets.ResummonAll()</Down>
			</Action>
			<Action name="RESUMMON_VANITY_PETS">
				<Down>AutoBanishPets.ResummonVanityPets()</Down>
			</Action>
			<Action name="RESUMMON_ASSISTANTS">
				<Down>AutoBanishPets.ResummonAssistants()</Down>
			</Action>
			<Action name="RESUMMON_COMPANIONS">
				<Down>AutoBanishPets.ResummonCompanions()</Down>
			</Action>
			<Action name="NO_PETS_ALLOWED">
				<Down>AutoBanishPets.ToggleNPA(not AutoBanishPets.savedVariables.noPetsAllowed)</Down>
			</Action>
		</Category>
	</Layer>
	<Layer name="GamepadUIMode" allowFallthrough="false">
		<Category>
			<AllowAction name="BANISH_ALL"/>
			<AllowAction name="BANISH_PETS"/>
			<AllowAction name="BANISH_VANITY_PETS"/>
			<AllowAction name="BANISH_ASSISTANTS"/>
			<AllowAction name="BANISH_COMPANIONS"/>
			<AllowAction name="RESUMMON_ALL"/>
			<AllowAction name="RESUMMON_VANITY_PETS"/>
			<AllowAction name="RESUMMON_ASSISTANTS"/>
			<AllowAction name="RESUMMON_COMPANIONS"/>
			<AllowAction name="NO_PETS_ALLOWED"/>
		</Category>
	</Layer>
</Bindings>